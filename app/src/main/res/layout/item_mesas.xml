<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/productoEnviado"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_mesas"
            android:layout_marginRight="@dimen/dimen_mesas"
            android:layout_marginBottom="@dimen/dimen_mesas"
            android:layout_marginTop="@dimen/dimen_mesas"
            android:id="@+id/llMesaLista">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mesa1"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:id="@+id/tvMesa"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alejandra"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:id="@+id/tvUsuario"/>

        </LinearLayout>
</LinearLayout>